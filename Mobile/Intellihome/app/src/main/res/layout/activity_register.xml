<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText"  >

    <!-- Logo -->
    <ImageView
        android:id="@+id/img_logotipo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/register_logo_desc"
        android:src="@drawable/logotipo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <!-- Scroll de formulario -->
    <ScrollView
        android:id="@+id/sc_form"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/img_logotipo"
        app:layout_constraintBottom_toTopOf="@id/btn_registrar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true"
        android:layout_marginTop="0dp">

        <!-- Contenedor principal -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Información de usuario -->
            <LinearLayout
                android:id="@+id/ll_info_usuario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" >

                <!-- Nombre y apellidos -->
                <ImageButton
                    android:id="@+id/img_usuario"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Foto de usuario"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_bg"
                    android:clipToOutline="true"
                    android:src="@drawable/ic_add_photo" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp">

                    <!-- Nombre -->
                    <LinearLayout
                        android:id="@+id/ll_nombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="89dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/register_name"
                            android:textSize="16sp" />
                        <EditText
                            android:minHeight="48dp"
                            android:minWidth="48dp"
                            android:id="@+id/et_nombre"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="textPersonName"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- Apellido -->
                    <LinearLayout
                        android:id="@+id/ll_apellidos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:layout_width="89dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/register_lastname"
                            android:textSize="16sp" />
                        <EditText
                            android:minHeight="48dp"
                            android:minWidth="48dp"
                            android:id="@+id/et_apellidos"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="textPersonName"
                            android:textSize="14sp"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Correo -->
            <LinearLayout
                android:id="@+id/ll_correo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_info_usuario">
                <TextView
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/register_email"
                    android:textSize="16sp" />
                <EditText
                    android:minHeight="48dp"
                    android:minWidth="48dp"
                    android:id="@+id/et_correo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textEmailAddress"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Nombre de usuario -->
            <LinearLayout
                android:id="@+id/ll_usuario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_correo" >
                <TextView
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/register_username"
                    android:textSize="16sp" />
                <EditText
                    android:minHeight="48dp"
                    android:minWidth="48dp"
                    android:id="@+id/et_username"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textPersonName"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Contraseña -->
            <LinearLayout
                android:id="@+id/ll_contrasena"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_usuario">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_password"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical" />
                <EditText
                    android:hint="@string/register_password_hint"
                    android:minHeight="48dp"
                    android:minWidth="48dp"
                    android:id="@+id/et_contrasena"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textPassword"
                    android:textSize="14sp" />
                <ImageButton
                    android:id="@+id/btn_mostrar_password"
                    android:layout_marginTop="10dp"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Mostrar/ocultar contraseña"
                    android:src="@drawable/ic_close_eye" />
            </LinearLayout>

            <!-- Confirmar contraseña -->
            <LinearLayout
                android:id="@+id/ll_confirmar_contrasena"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_contrasena">
                <TextView
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/register_confirm_password"
                    android:textSize="16sp" />
                <EditText
                    android:minHeight="48dp"
                    android:minWidth="48dp"
                    android:id="@+id/et_confirmar_contrasena"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textPassword"
                    android:textSize="14sp" />
                <ImageButton
                    android:id="@+id/btn_mostrar_password2"
                    android:layout_marginTop="10dp"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Mostrar/ocultar contraseña"
                    android:src="@drawable/ic_close_eye" />
            </LinearLayout>

            <!-- Pregunta de recuperación -->
            <LinearLayout
                android:id="@+id/ll_pregunta_recuperacion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_confirmar_contrasena">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_recovery_question"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />
                <Spinner
                    android:id="@+id/sp_pregunta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />
                <EditText
                    android:id="@+id/et_respuesta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/register_answer"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:minWidth="48dp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Teléfono -->
            <LinearLayout
                android:id="@+id/ll_telefono"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_pregunta_recuperacion">

                <TextView
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/register_phone"
                    android:textSize="16sp" />
                <EditText
                    android:minHeight="48dp"
                    android:minWidth="48dp"
                    android:id="@+id/et_telefono"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="phone"
                    android:textSize="14sp"/>

            </LinearLayout>

            <!-- Fecha de nacimiento y calendario -->
            <LinearLayout
                android:id="@+id/ll_fecha_nacimiento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_telefono">

                <TextView
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/register_birthdate"
                    android:textSize="16sp" />
                <EditText
                    android:minHeight="48dp"
                    android:minWidth="48dp"
                    android:id="@+id/et_fecha_nacimiento"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="date"
                    android:hint="yyyy-mm-dd"
                    android:textSize="14sp"
                    android:focusable="false" />

                <ImageButton
                    android:id="@+id/btn_calendario"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/register_open_calendar"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:src="@android:drawable/ic_menu_today" />
            </LinearLayout>

            <!-- Hobbies -->
            <LinearLayout
                android:id="@+id/ll_hobbies"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_fecha_nacimiento">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_hobbies"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />
                <CheckBox
                    android:id="@+id/hobby_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hobby_tv"
                    android:textSize="14sp" />
                <CheckBox
                    android:id="@+id/hobby_hiking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hobby_hiking"
                    android:textSize="14sp"/>
                <CheckBox
                    android:id="@+id/hobby_boardgames"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hobby_boardgames"
                    android:textSize="14sp" />
                <CheckBox
                    android:id="@+id/hobby_snorkel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hobby_snorkel"
                    android:textSize="14sp" />
                <CheckBox
                    android:id="@+id/hobby_sports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hobby_sports"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Domicilio -->
            <LinearLayout
                android:id="@+id/ll_domicilio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_hobbies">
                <TextView
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/register_address"
                    android:textStyle="bold"
                    android:textSize="16sp" />
                <EditText
                    android:id="@+id/et_domicilio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="48dp"
                    android:minWidth="48dp"
                    android:inputType="textPostalAddress"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Casa de preferencia -->
            <LinearLayout
                android:id="@+id/ll_casa_preferencia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_domicilio">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_house_preference"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />
                <CheckBox
                    android:id="@+id/casa_minimalista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/house_minimalist"
                    android:textSize="14sp" />
                <CheckBox
                    android:id="@+id/casa_aventurera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/house_adventurous"
                    android:textSize="14sp" />
                <CheckBox
                    android:id="@+id/casa_contemporanea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/house_contemporary"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Datos de tarjeta de pago -->
            <LinearLayout
                android:id="@+id/ll_tarjeta_pago"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_casa_preferencia">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_payment_data"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Titular -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/register_card_holder"
                        android:textSize="14sp" />
                    <EditText
                        android:id="@+id/et_titular_tarjeta"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="48dp"
                        android:minWidth="48dp"
                        android:inputType="textPersonName"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Número de tarjeta -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/register_card_number"
                        android:textSize="14sp" />
                    <EditText
                        android:id="@+id/et_numero_tarjeta"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="48dp"
                        android:minWidth="48dp"
                        android:inputType="number"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Fecha de vencimiento -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/register_card_expiration"
                        android:textSize="14sp" />
                    <EditText
                        android:id="@+id/et_fecha_vencimiento"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="48dp"
                        android:minWidth="48dp"
                        android:inputType="date"
                        android:hint="@string/register_card_expiration_hint"
                        android:textSize="14sp"
                        android:focusable="false" />

                    <ImageButton
                        android:id="@+id/btn_calendario2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/register_open_calendar"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:src="@android:drawable/ic_menu_today" />
                </LinearLayout>

            </LinearLayout>

            <!-- Añadir huella -->
            <CheckBox
                android:id="@+id/cb_huella_digital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_fingerprint"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/ll_tarjeta_pago"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <!-- Términos y condiciones: CheckBox deshabilitado y TextView alineados horizontalmente -->
            <LinearLayout
                android:id="@+id/ll_terminos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/cb_huella_digital"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <CheckBox
                    android:id="@+id/cb_terminos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false" />
                <TextView
                    android:id="@+id/tv_ver_terminos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver términos y condiciones"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingStart="8dp"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Botón de registro -->
    <Button
        android:id="@+id/btn_registrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/black"
        android:text="@string/register_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sc_form" />

    <!-- Botón de inicio de sesión -->
    <TextView
        android:id="@+id/btn_login_redirigir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:text="@string/register_login_redirect"
        app:layout_constraintTop_toBottomOf="@id/btn_registrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>